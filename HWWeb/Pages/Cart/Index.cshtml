@page
@model HWWeb.Pages.Cart.IndexModel

<h2>Your Shopping Cart</h2>
  
@if (!Model.Cart.Items.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cart.Items)
            {
                <tr>
                    <td>@item.Phone.Model</td>
                    <td>@item.Quantity</td>
                    <td>@item.Phone.Price</td>
                    <td>@(item.Quantity * item.Phone.Price)</td>
                    <td>
                        <a asp-page-handler="RemoveFromCart" asp-route-phoneId="@item.PhoneId" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>Total: @Model.Cart.Items.Sum(i => i.Quantity * i.Phone.Price)</p>
    <a asp-page="/Cart/Payment" class="btn btn-success">Checkout</a>
}
