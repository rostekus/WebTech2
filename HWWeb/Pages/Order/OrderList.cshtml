@page
@model OrderListModel
@{
    ViewData["Title"] = "Order List";
}

<h2>Order List</h2>

@if (Model.Orders.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User</th>
                <th>Order Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.User.UserName</td>
                    <td>@order.OrderDate</td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@order.Id" class="btn btn-primary">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found.</p>
}
